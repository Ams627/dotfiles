aa() {
    if [[ ${1::2} == "-r" ]] || [[ ${1::2} == "-d" ]] || [[ ${1::2} == "-m" ]] || [[ ${1::2} == "-t" ]]; then
        ada $*
        unalias -a
        . ~/.dir-aliases
        . ~/.aliases
    else
        if [[ -n $(type -t $1) ]]; then
            echo already an alias, command or function
        else
            ada -a $1
            unalias -a
            . ~/.dir-aliases
            . ~/.aliases
        fi
    fi
}

ccd() {
	if [[ -d $1 ]]; then
		cd $1;
	elif [[ -f $1 ]]; then
		DIR = "$(dirname $1)"
		cd $DIR
	else
		echo 1
		tmpFile='/c/temp/ccd.txt'
		echo 2
		cchangeDirectory $* >$tmpFile
		echo 3
		read -r firstLine <$tmpFile
		if [[ "$firstLine" =~ ^#cd ]]; then
			dir=${firstLine:5}
			dirWithoutCR=${dir::-1} #remove windows CR
			cd $dirWithoutCR
		else
			cat $tmpFile
		fi
	fi
}

