root() {
    local root
    root=$(git rev-parse --show-toplevel 2>/dev/null)
    echo $root
    if [[ -n "$root" ]]; then
        cd "$root" || return
        return
    fi
  # Not in a Git repo â€” look upward for a .sln file
  local dir=$PWD
  while [[ "$dir" != "/" ]]; do
    for file in "$dir"/*.sln; do
      [[ -e "$file" ]] && cd "$dir" && return
    done
    dir=${dir%/*}  # Move up a directory without dirname
  done
}

