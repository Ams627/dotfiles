gist() {
  local filename="${1:-clipboard.txt}"
  local desc="${2:-"Public gist from clipboard"}"
  cat /dev/clipboard >/c/temp/clip.txt
  gh gist create /c/temp/clip.txt -f "$filename" -d "$desc" --public
}

